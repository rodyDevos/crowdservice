<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/viewjob_headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/header"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/viewjob_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="PayPal Details"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sign_up_text_size" />

        <TextView
            android:id="@+id/viewjob_btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/left"
            android:drawableStart="@drawable/left"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sign_up_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingEnd="@dimen/login_blue_line_top_margin"
        android:paddingLeft="@dimen/login_blue_line_top_margin"
        android:paddingRight="@dimen/login_blue_line_top_margin"
        android:paddingStart="@dimen/login_blue_line_top_margin" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="PayPal Account Email Id:        "
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_as_guest_text_size"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_paypal_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_blue_line_left_right_margin"
            android:background="@drawable/input12x"
            android:ems="10"
            android:hint="Enter Your PayPal Account"
            android:padding="@dimen/register_edittext_top_margin"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/login_as_guest_text_size" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/login_blue_line_left_right_margin"
            android:padding="5dp"
            android:text="Confirm PayPal Email Id:        "
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_as_guest_text_size"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/confirm_paypal_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_blue_line_left_right_margin"
            android:background="@drawable/input12x"
            android:ems="10"
            android:hint="Enter Your PayPal Account"
            android:inputType="textEmailAddress"
            android:padding="@dimen/register_edittext_top_margin"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/login_as_guest_text_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_blue_line_left_right_margin"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/login_blue_line_bottom_margin"
            android:paddingLeft="@dimen/login_blue_line_bottom_margin"
            android:paddingRight="@dimen/login_blue_line_bottom_margin"
            android:paddingStart="@dimen/login_blue_line_bottom_margin" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal" >

                <Button
                    android:id="@+id/submit_paypal_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnsubmit"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/login_as_guest_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal" >

                <Button
                    android:id="@+id/reset_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnsubmit"
                    android:gravity="center"
                    android:text="Reset"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/login_as_guest_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>